{
  "name": "tiation-rigger-connect-api",
  "version": "1.0.0",
  "description": "API services for RiggerConnect, providing enterprise-grade RESTful endpoints.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "type-check": "tsc --noEmit",
    "build": "npm run build:backend",
    "build:backend": "tsc ",
    "security-audit": "npm audit --audit-level=moderate",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "ts-jest": "^29.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiation/tiation-rigger-connect-api.git"
  },
  "author": "RiggerConnect Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiation/tiation-rigger-connect-api/issues"
  },
  "homepage": "https://github.com/tiation/tiation-rigger-connect-api#readme"
}

